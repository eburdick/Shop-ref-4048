<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Custom lower level styles.  For this app, I want the spinners
         to have a particular text size and be monospaced.  Each item below
         is a reference to a subordinate (cascaded) style-->

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <!-- custom styles for spinner item and dropdown text. This
     is needed to set the text size and typeface (monospace for
     this application to make the menu lines line up with the
     text view above it)-->
    <style name="spinnerItemStyle">
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">@dimen/spinner_dropdown_padding</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
